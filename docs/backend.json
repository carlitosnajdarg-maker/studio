
{
  "entities": {
    "Category": {
      "title": "Category",
      "type": "object",
      "description": "Categorías para organizar el menú.",
      "properties": {
        "id": { "type": "string" },
        "name": { "type": "string" },
        "order": { "type": "number" }
      },
      "required": ["id", "name"]
    },
    "MenuItem": {
      "title": "MenuItem",
      "type": "object",
      "description": "Ítems del menú del bar pool.",
      "properties": {
        "id": { "type": "string" },
        "title": { "type": "string" },
        "price": { "type": "number" },
        "imageUrl": { "type": "string", "format": "uri" },
        "category": { "type": "string" },
        "description": { "type": "string" }
      },
      "required": ["id", "title", "price", "category"]
    },
    "Staff": {
      "title": "Staff",
      "type": "object",
      "description": "Miembros del personal (moderadores).",
      "properties": {
        "id": { "type": "string" },
        "name": { "type": "string" },
        "email": { "type": "string", "format": "email" },
        "role": { "type": "string" },
        "activeSession": { 
          "type": "object", 
          "properties": {
            "startTime": { "type": "string" },
            "status": { "type": "string", "enum": ["active", "paused"] },
            "pauseStartTime": { "type": "string" },
            "totalPausedMinutes": { "type": "number" }
          }
        }
      },
      "required": ["id", "name", "email", "role"]
    },
    "Role": {
      "title": "Role",
      "type": "object",
      "description": "Rangos personalizados creados por el dueño.",
      "properties": {
        "id": { "type": "string" },
        "name": { "type": "string" },
        "level": { "type": "string", "enum": ["Dueño", "Gerente", "Staff"] }
      },
      "required": ["id", "name", "level"]
    },
    "WorkLog": {
      "title": "WorkLog",
      "type": "object",
      "description": "Registro de horas trabajadas excluyendo pausas.",
      "properties": {
        "id": { "type": "string" },
        "staffId": { "type": "string" },
        "startTime": { "type": "string", "format": "date-time" },
        "endTime": { "type": "string", "format": "date-time" },
        "durationMinutes": { "type": "number" },
        "pausedMinutes": { "type": "number" }
      },
      "required": ["id", "staffId", "startTime", "endTime"]
    },
    "Rating": {
      "title": "Rating",
      "type": "object",
      "description": "Calificaciones de clientes al staff.",
      "properties": {
        "id": { "type": "string" },
        "staffId": { "type": "string" },
        "score": { "type": "number" },
        "comment": { "type": "string" },
        "createdAt": { "type": "string", "format": "date-time" }
      },
      "required": ["id", "staffId", "score", "createdAt"]
    }
  },
  "auth": {
    "providers": ["google", "password"]
  },
  "firestore": {
    "structure": [
      {
        "path": "/menu/{itemId}",
        "definition": { "entityName": "MenuItem", "description": "Menú público." }
      },
      {
        "path": "/staff_members/{staffId}",
        "definition": { "entityName": "Staff", "description": "Lista de personal autorizado." }
      },
      {
        "path": "/custom_roles/{roleId}",
        "definition": { "entityName": "Role", "description": "Roles definidos por el dueño." }
      },
      {
        "path": "/work_logs/{logId}",
        "definition": { "entityName": "WorkLog", "description": "Registros de tiempo del staff." }
      },
      {
        "path": "/ratings/{ratingId}",
        "definition": { "entityName": "Rating", "description": "Calificaciones del staff." }
      }
    ]
  }
}
