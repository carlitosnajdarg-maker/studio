
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Función para verificar si el usuario es un administrador de Mr. Smith
    function isAdmin() {
      return request.auth != null && (
        request.auth.token.email == "arrozitocarlos1@gmail.com" || 
        request.auth.token.email == "carlitosnajdarg@gmail.com" ||
        request.auth.token.email == "dueno@mrsmithbarpool.com" ||
        get(/databases/$(database)/documents/staff_members/$(request.auth.uid)).data.role == "Gerente" ||
        get(/databases/$(database)/documents/staff_members/$(request.auth.uid)).data.role == "Dueño"
      );
    }

    // El menú es público para lectura. Escritura para Staff/Admin.
    match /menu/{itemId} {
      allow read: if true;
      allow create, update: if request.auth != null;
      allow delete: if isAdmin();
    }

    // Los perfiles de staff son públicos. El admin o el dueño del perfil pueden escribir.
    match /staff_members/{staffId} {
      allow read: if true;
      allow write: if isAdmin() || (request.auth != null && request.auth.uid == staffId);
    }

    // Los rangos personalizados deben ser legibles por cualquier usuario logueado para cargar el panel.
    match /custom_roles/{roleId} {
      allow read: if request.auth != null;
      allow write: if isAdmin();
    }

    // Registros de trabajo.
    match /work_logs/{logId} {
      allow read: if isAdmin();
      allow create: if request.auth != null;
      allow update, delete: if isAdmin();
    }

    // Calificaciones públicas.
    match /ratings/{ratingId} {
      allow read, create: if true;
      allow delete: if isAdmin();
    }
  }
}
