
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Función para verificar si el usuario es un administrador de Mr. Smith
    function isAdmin() {
      return request.auth != null && (
        request.auth.token.email in ["arrozitocarlos1@gmail.com", "carlitosnajdarg@gmail.com", "dueno@mrsmithbarpool.com"] || 
        (exists(/databases/$(database)/documents/staff_members/$(request.auth.uid)) && (
          get(/databases/$(database)/documents/staff_members/$(request.auth.uid)).data.role == "Gerente" ||
          get(/databases/$(database)/documents/staff_members/$(request.auth.uid)).data.role == "Dueño"
        ))
      );
    }

    // El menú es público para lectura. Escritura para Staff/Admin.
    match /menu/{itemId} {
      allow read: if true;
      allow create, update: if request.auth != null;
      allow delete: if isAdmin();
    }

    // Los perfiles de staff son públicos para que el cliente pueda calificarlos.
    match /staff_members/{staffId} {
      allow read: if true;
      allow write: if isAdmin() || (request.auth != null && request.auth.uid == staffId);
    }

    // Los rangos personalizados deben ser legibles por cualquier usuario logueado.
    match /custom_roles/{roleId} {
      allow read: if request.auth != null;
      allow write: if isAdmin();
    }

    // Registros de trabajo protegidos para gerencia.
    match /work_logs/{logId} {
      allow read: if isAdmin();
      allow create: if request.auth != null;
      allow update, delete: if isAdmin();
    }

    // Calificaciones públicas: Todos pueden ver y calificar.
    match /ratings/{ratingId} {
      allow read, create: if true;
      allow delete: if isAdmin();
    }

    // Galería pública: Todos pueden ver (get/list) y subir (create). Solo admin borra.
    match /gallery/{postId} {
      allow get, list, create: if true;
      allow delete: if isAdmin();
    }

    // Configuración general del bar.
    match /settings/{docId} {
      allow read: if true;
      allow write: if isAdmin();
    }
  }
}
