rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    function isAuthorized() {
      return request.auth != null && (
        request.auth.token.email == "arrozitocarlos1@gmail.com" || 
        request.auth.token.email == "carlitosnajdarg@gmail.com" ||
        request.auth.token.email == "dueno@mrsmithbarpool.com" ||
        request.auth.token.email == "staff@mrsmithbarpool.com" ||
        request.auth.token.email == "mesero@mrsmithbarpool.com" ||
        request.auth.token.email == "bartender@mrsmithbarpool.com"
      );
    }

    function isAdmin() {
      return request.auth != null && (
        request.auth.token.email == "arrozitocarlos1@gmail.com" || 
        request.auth.token.email == "carlitosnajdarg@gmail.com" ||
        request.auth.token.email == "dueno@mrsmithbarpool.com"
      );
    }

    match /menu/{itemId} {
      allow read: if true;
      allow create, update: if isAuthorized();
      allow delete: if isAdmin();
    }

    match /categories/{categoryId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    match /staff_members/{staffId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    match /tips/{tipId} {
      allow create: if request.auth != null;
      allow read: if isAuthorized();
    }

    match /ratings/{ratingId} {
      allow read, create: if true;
      allow write: if isAuthorized();
    }
  }
}