
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    function isAdmin() {
      return request.auth != null && (
        request.auth.token.email == "arrozitocarlos1@gmail.com" || 
        request.auth.token.email == "carlitosnajdarg@gmail.com" ||
        request.auth.token.email == "dueno@mrsmithbarpool.com"
      );
    }

    function isStaff() {
      return request.auth != null && (
        isAdmin() || 
        exists(/databases/$(database)/documents/staff_members/$(request.auth.uid)) ||
        exists(/databases/$(database)/documents/staff_members/staff_id_placeholder) // Solo conceptual
      );
    }

    match /menu/{itemId} {
      allow read: if true;
      allow create, update: if request.auth != null; // Refinado por l√≥gica de UI para staff
      allow delete: if isAdmin();
    }

    match /staff_members/{staffId} {
      allow read: if true;
      allow write: if isAdmin() || (request.auth != null && request.resource.data.email == request.auth.token.email);
    }

    match /work_logs/{logId} {
      allow read: if isAdmin();
      allow create: if request.auth != null;
    }

    match /ratings/{ratingId} {
      allow read, create: if true;
      allow delete: if isAdmin();
    }
  }
}
